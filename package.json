{
  "name": "be-nestjs-service",
  "version": "0.0.1",
  "description": "Backend NestJs service template for application",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json && rm -rf packages/**/**/node_modules packages/**/*/dist packages/**/*/build",
    "fresh:start": "npm run clean && npm i",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "NODE_ENV=development GOOGLE_PROJECT_ID=verus-dev-1 nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node build/index.js",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "format": "npx prettier --check \"{src,test}/**/*.ts\"",
    "format:fix": "npx prettier --write \"{src,test}/**/*.ts\"",
    "test": "echo \"No test needed\" && exit 0",
    "test:local": "jest --runInBand --detectOpenHandles --coverage",
    "test:unit": "jest --coverage=false --silent --runInBand --detectOpenHandles --noStackTrace -- ",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles",
    "test:e2e": "jest --runInBand --detectOpenHandles --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.0",
    "@google-cloud/secret-manager": "^5.6.0",
    "@google-cloud/storage": "^7.14.0",
    "@nestjs/axios": "^3.1.1",
    "@nestjs/common": "^10.4.6",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.6",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.6",
    "@nestjs/swagger": "8.0.1",
    "axios": "1.7.7",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "1.20.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "express": "4.21.1",
    "helmet": "^8.0.0",
    "jwks-rsa": "^3.1.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.8.0",
    "multer": "^1.4.5-lts.1",
    "nocache": "^4.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.0.2",
    "winston": "^3.16.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/testing": "^10.4.6",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/multer": "^1.4.12",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.14.0",
    "globals": "^15.11.0",
    "rimraf": "^6.0.1",
    "typescript": "5.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.(test|spec)\\.(js|ts)$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/build/"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "whatwg-url": "^14.0.0"
  }
}
